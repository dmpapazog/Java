{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format


    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd",
            "args": [
                "${fileDirname};",
                "javac",
                "-g",
                "${fileBasename}",
                "-d",
                "${workspaceFolder}\\bin"

            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "build & run",
            "type": "shell",
            "dependsOn": "build",
            "command": "chcp",
            "args": [
                "65001;",
                "cd",
                "${workspaceFolder}\\bin;",
                "java",
                "${fileBasenameNoExtension}",

            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
            }
        }
    ]
}